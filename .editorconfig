# http://editorconfig.org
root = true

[*.{js,jsx,tsx,ts,json,md,zsh}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,tsx,ts,json}]
max_line_length = 80


[*.md]
max_line_length = 0

[COMMIT_EDITMSG]
max_line_length = 0
