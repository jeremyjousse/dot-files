[alias]
        st=status
        ci=commit -m
        co=checkout
        br=branch
        ft=fetch
        df=diff -w
        tree=log --graph --oneline --all
        la="!git config -l | grep alias | cut -c 7-"
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        pf = push --force-with-lease
        pr = pull --rebase
        cl-pr=push origin -d
        cb="!git fetch --prune && git branch -vv|grep ': gone]'|awk '{ print $1; }'|xargs git branch -D"
        purge = "!git branch --merged | egrep -v '(^\\*|main|develop)' | xargs git branch -d"
        undo = reset --soft HEAD^

[commit]
        gpgsign = true

[core]
	autocrlf = input
	editor = code --wait
        fileMode = false
        pager = delta
        ignorecase = false

[delta]
        line-numbers = true

[diff]
        algorithm = patience

[gpg]
        # program = /opt/homebrew/bin/gpg
        format = ssh

[init]
	defaultBranch = main

[user]
	name = Jérémy Jousse
	email = jeremy.jousse@gmail.com
	signingkey = ~/.ssh/jeremyjousse.pub

[pull]
	rebase = true

[push]
	autoSetupRemote = true
        default = current


[includeIf "gitdir:~/Development/Decathlon/"]
    path = ~/.gitconfig-work